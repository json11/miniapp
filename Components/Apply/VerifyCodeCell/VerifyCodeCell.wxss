/* Components/Apply/VerifyCodeCell/VerifyCodeCell.wxss */

.body {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 88rpx;
  background-color: white;
}

.title {
  font-size:28rpx;
  color:#4a4a4a;
  letter-spacing:0;
}

.rightBody {
  display: inline-flex;
  flex: 1;
  flex-direction: column;
  align-items: stretch;
}

.input {
  color: black;
  font-size:28rpx;
  flex: 1;
}

.rightSep {
  background-color: #eee;
  height: 2rpx;
}

.rightTopBody {
  display: flex;
  flex-direction: row;
  flex: 1;
  align-items: center;
}

.rightTopImage {
  width: 12rpx;
  height: 22rpx;
  margin-right: 20rpx;
}

.forgetTextView {
  margin-left: 20rpx;
  background-image:linear-gradient(132deg,#ffe540 60%, #ffe540);
  box-shadow:0 2rpx 4rpx 0 rgba(255,230,0,0.44);
  border-radius:20px;
  height:40rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
}

.forgetText {
  font-size: 24rpx;
  color: #4a4a4a;
  margin: 10rpx 16rpx;
}