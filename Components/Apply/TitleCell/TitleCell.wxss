/* Components/Apply/TitleCell/TitleCell.wxss */

.body {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: white;
}

.columnSep {
  display: inline-flex;
  width: 6rpx;
  height: 44rpx;
  background-color: #ffe600;
}

.title {
  font-size:28rpx;
  letter-spacing:0;
}

.rightBody {
  display: inline-flex;
  flex: 1;
  flex-direction: column;
  align-items: stretch;
}

.value {
  color: black;
  font-size:28rpx;
}

.rightSep {
  background-color: #eee;
  height: 2rpx;
}

.rightTopBody {
  display: flex;
  flex-direction: row;
  flex: 1;
  align-items: center;
}

.rightTopImageArrow {
  width: 12rpx;
  height: 22rpx;
}

.rightTopImagePhone {
  width: 40rpx;
  height: 40rpx;
}

.text {
  font-size: 32rpx;
  color: black;
}

.bottomBorderSep {
  border-bottom-style: solid;
  border-bottom-width: 2rpx;
  border-bottom-color: #eee;
}