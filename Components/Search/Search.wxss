/* Components/Search/Search.wxss */

.body {
  height: 120rpx;
  background-color: transparent;
  padding: 20rpx;
  box-sizing: border-box;
}

.contentBody {
  padding: 0;
  background:#ffffff;
  overflow: hidden;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 8rpx 0 rgba(0,0,0,0.08);
  display: flex;
  flex-direction: row;
  align-items: center;
}

.searchImage {
  width: 26rpx;
  height: 26rpx;
  margin-left: 22rpx;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: black;
  margin-left: 24rpx;
}

.searchBtn {
  width: 120rpx;
  height: 80rpx;
  background: linear-gradient(90deg, #ffe540 30%, #ffe540);
  align-self: stretch;
  display: flex;
  align-items: center;
  justify-content: center;
}

.searchBtnText {
  color: #4a4a4a;
  font-size: 28rpx;
}