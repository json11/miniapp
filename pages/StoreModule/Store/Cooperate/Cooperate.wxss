/* pages/StoreModule/Store/Cooperate/Cooperate.wxss */
.container {
  background: #f8f8f8;
}
.segment {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  height: 66rpx;
  margin-bottom: 2rpx;
  background: #fff;
}
.segment text {
  width: 160rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #9b9b9b;
  border: 1rpx solid #d8d8d8;
  border-radius: 20rpx;
  background: #fff;
}
.segment text.active {
  color: #4a4a4a;
  background-image:linear-gradient(-133deg, #ffd519 0%, #fff465 100%);
  box-shadow:0 1px 2px 0 #ffe600;
  border: none;
}

