/* pages/StoreModule/Store/StoreBoard/StoreBoard.wxss */
.container {
  overflow: hidden;
  padding-bottom: 20rpx;
  background: #f8f8f8;
}
.storeData {
  width: 712rpx;
  min-height: 336rpx;
  margin: 20rpx auto;
  padding-bottom: 20rpx;
  background: #fff;
  border-radius: 14rpx;
}

.titleCell {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 68rpx;
}
.titleCell .titleLine {
  width: 4rpx;
  height: 44rpx;
  background: #ffe600;
}
.titleCell text {
  margin-left: 36rpx;
  font-size: 14px;
  color: #000;
  font-weight: 500;
}

.segmentCell {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  padding: 0 24rpx;
  background: #fff;
}
.segmentCell .tab {
  display: inline-block;
  width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  margin-right: 40rpx;
  border:2rpx solid #d8d8d8;
  border-radius:20rpx;
  background: #fff;
  font-size: 20rpx;
  color: #9b9b9b;
}
.segmentCell .tab.active {
  background:#ffe540;
  background-image:linear-gradient(-132deg, rgb(255, 217, 34) 0%, rgb(255, 240, 93) 100%);
  border: none;
  color: #4a4a4a;
}
.unit {
  font-size: 20rpx;
  color: #9b9b9b;
}