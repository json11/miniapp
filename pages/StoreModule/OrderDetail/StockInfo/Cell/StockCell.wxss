/* pages/StoreModule/OrderDetail/StockInfo/Cell/StockCell.wxss */
.container {
  background: #fff;
}
.main {
  display: flex;
  flex-direction: row;
  align-items: center;
  min-height: 160rpx;
  background: #fff;
}
.hd {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 170rpx;
}
.hd image {
  width: 108rpx;
  height: 70rpx;
}
.hd .model {
  margin-top: 8rpx;
  font-size: 16rpx;
  color: #000;
}
.bd {
  flex:1;
  font-size: 28rpx;
  color: #9b9b9b;
}
.bd .calc {
  margin-top: 16rpx;
}
.bd .name {
  display: inline-block;
  width: 140rpx;
}
.bd .value {
  color: #000;
}
.ft image {
  margin-right: 30rpx;
}
.ft image.right {
  width: 12rpx;
  height: 22rpx;
}
.ft image.down {
  width: 22rpx;
  height: 12rpx;
}

.desc {
  padding: 20rpx 0 40rpx;
  background: #f8f8f8;
  font-size: 28rpx;
  color: #9b9b9b;
}
.desc .item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 20rpx;
  padding: 0 40rpx;
}
.desc .item .name {
  width: 84rpx;
}
.desc .item .value {
  color: #000;
}
.desc .item .even {
  margin-left: 40rpx;
}
.desc .item .odd .value {
  display: inline-block;
  width: 254rpx;
  word-wrap:break-word;
}