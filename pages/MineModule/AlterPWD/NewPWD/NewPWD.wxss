

page {
  display: flex;
  flex-direction: column;
}

.welcome {
  display: block;
  font-size: 52rpx;
  color: #4a4a4a;
  margin-left: 50rpx;
  margin-top: 120rpx;
}

.lineSep {
  height: 2rpx;
  background-color:#eee;
  margin-left: 60rpx;
  margin-right: 60rpx;
}

.activeLineSep {
  height: 2rpx;
  background-color:#ffe600;
  margin-left: 60rpx;
  margin-right: 60rpx;
}

.codeInputBody {
  margin-top: 160rpx;
  display: flex;
  flex-direction: row;
  margin-left: 60rpx;
  margin-right: 60rpx;
  align-items: center;
  margin-bottom: 20rpx;
}

.ensureCodeInputBody {
  margin-top: 20rpx;
}

.codeInput {
  font-size: 34rpx;
  flex:1 ;
  display: flex;
}

.eyeView {
  display: flex;
  height: 60rpx;
  width: 60rpx;
  justify-content: center;
  align-items: center;
}

.eyeImage {
  height: 30rpx;
  width: 30rpx;
}

.submit {
  margin-top: 106rpx;
  margin-left: 60rpx;
  margin-right: 60rpx;
  height: 112rpx;
  color: #4a4a4a;
  font-size: 40rpx;
  border-radius: 56rpx;
  padding-top: 6rpx;
  background-image:linear-gradient(132deg,#ffe540 60%, #ffe540);
  display: flex;
  justify-content: center;
  align-items: center;
}

.warning {
  padding-left: 60rpx;
  padding-right: 60rpx;
  margin-top: 40rpx;
}

.warningImage {
  width: 20rpx;
  height: 20rpx;
}

.warningText {
  color: #4a4a4a;
  font-size: 24rpx;
  line-height: 36rpx;
}